# ===========================================
# MIMIQ - PREDICTION MARKET BACKEND
# ===========================================
# Copy this file to .env and fill in your values

# Server Configuration
NODE_ENV=development
PORT=8081

# ClickHouse Database
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=8123
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=password
# Note: The aggregation pipeline uses 'prediction_market' database
# This database stores unified data from all protocols (Polymarket, Kalshi)
CLICKHOUSE_DATABASE=drift_data

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars

# Encryption for storing API credentials
ENCRYPTION_KEY=your-32-character-encryption-key

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3001

# ===========================================
# METAMASK SDK CONFIGURATION
# ===========================================
# For mobile SDK support (optional)

# Infura Project ID for MetaMask SDK connection
METAMASK_INFURA_PROJECT_ID=your-infura-project-id

# Supported chain IDs (comma-separated)
# 1 = Ethereum Mainnet, 137 = Polygon
METAMASK_SUPPORTED_CHAINS=1,137

# DApp metadata
DAPP_NAME=Mimiq Trading Platform
DAPP_URL=https://mimiq.trade

# ===========================================
# POLYMARKET CONFIGURATION (Optional)
# ===========================================
# These are used for trading functionality

# Polymarket API URLs (defaults are public)
POLYMARKET_GAMMA_URL=https://gamma-api.polymarket.com
POLYMARKET_DATA_URL=https://data-api.polymarket.com
POLYMARKET_CLOB_URL=https://clob.polymarket.com

# ===========================================
# KALSHI CONFIGURATION (Optional)
# ===========================================
# These are used for trading functionality

# Kalshi API URL
KALSHI_API_URL=https://api.elections.kalshi.com/trade-api/v2

# ===========================================
# DOCKER CONFIGURATION
# ===========================================
# Used when running with docker-compose

# For production docker-compose
NEXT_PUBLIC_API_URL=http://localhost:8081/api
